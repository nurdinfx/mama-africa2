# Mama Africa Restaurant Management System - Frontend Production Environment
# This file is used when deployed to Vercel

# API Configuration - PRODUCTION
VITE_API_URL=https://mama-africa1.onrender.com/api/v1
VITE_API_BASE_URL=https://mama-africa1.onrender.com

# Backend Server - PRODUCTION
VITE_BACKEND_URL=https://mama-africa1.onrender.com

# WebSocket/Socket.io Configuration - PRODUCTION
VITE_SOCKET_URL=https://mama-africa1.onrender.com

# Environment
VITE_NODE_ENV=production

# App Configuration
VITE_APP_NAME=Mama Africa Restaurant
VITE_APP_VERSION=1.0.0

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Feature Flags
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_SOCKET=true
VITE_ENABLE_NOTIFICATIONS=true

# Date & Time
VITE_TIMEZONE=Africa/Mogadishu
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss

# Currency
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# Debug Mode (disabled in production)
VITE_DEBUG=false