# Mama Africa Restaurant Management System - Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration - LOCAL DEVELOPMENT
VITE_API_URL=http://localhost:5000/api/v1
VITE_API_BASE_URL=http://localhost:5000

# Backend Server - LOCAL DEVELOPMENT
VITE_BACKEND_URL=http://localhost:5000

# WebSocket/Socket.io Configuration - LOCAL DEVELOPMENT
VITE_SOCKET_URL=http://localhost:5000

# Production URLs (used when deployed to Vercel)
VITE_PRODUCTION_API_URL=https://mama-africa1.onrender.com/api/v1
VITE_PRODUCTION_BACKEND_URL=https://mama-africa1.onrender.com
VITE_PRODUCTION_SOCKET_URL=https://mama-africa1.onrender.com

# Environment
VITE_NODE_ENV=development

# App Configuration
VITE_APP_NAME=Mama Africa Restaurant
VITE_APP_VERSION=1.0.0

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_SOCKET=true
VITE_ENABLE_NOTIFICATIONS=true

# Date & Time
VITE_TIMEZONE=Africa/Mogadishu
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss

# Currency
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# Debug Mode (set to false in production)
VITE_DEBUG=true
